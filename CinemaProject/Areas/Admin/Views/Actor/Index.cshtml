
@model IEnumerable<CinemaProject.Models.Actor>

@{
    ViewData["Title"] = "Actors";
    var currentPage = Convert.ToInt32(ViewData["CurrentPage"] ?? 1);
    var totalPages = Convert.ToInt32(ViewData["TotalPages"] ?? 1);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Actors</h2>
        <a href="/Admin/Actor/Create" class="btn btn-primary">
            ➕ Create New
        </a>
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Profile</th>
                <th>Full Name</th>
                <th>Bio</th>
                <th>News</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var actor in Model)
                {
                    <tr>
                        <td>@actor.Id</td>

                        <td>
                            @if (!string.IsNullOrEmpty(actor.ProfilePicture))
                            {
                                <img src="~/images/actors/@actor.ProfilePicture" alt="@actor.FullName"
                                     style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No image</span>
                            }
                        </td>

                        <td>@actor.FullName</td>
                        <td>@(string.IsNullOrEmpty(actor.Bio) ? "-" : actor.Bio.Length > 60 ? actor.Bio.Substring(0, 60) + "..." : actor.Bio)</td>
                        <td>@(string.IsNullOrEmpty(actor.News) ? "-" : actor.News.Length > 60 ? actor.News.Substring(0, 60) + "..." : actor.News)</td>

                        <td>
                            <a href="/Admin/Actor/Edit/@actor.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/Admin/Actor/Delete/@actor.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this actor?')">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No actors found.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                <a class="page-link" href="/Admin/Actor/Index?currentPage=@(currentPage - 1)">Previous</a>
            </li>
            <li class="page-item active">
                <span class="page-link">@currentPage of @totalPages</span>
            </li>
            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" href="/Admin/Actor/Index?currentPage=@(currentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>
