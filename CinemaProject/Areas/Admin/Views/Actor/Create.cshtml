
@model CinemaProject.Models.Actor
@{
    ViewData["Title"] = "Create Actor";
}

<div class="container mt-5">
    <div class="card p-4">
        <h3 class="mb-4 text-center">🎬 Add New Actor</h3>

        <form method="post" action="/Admin/Actor/Create" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="row g-3">
                <!-- First Name -->
                <div class="col-md-6">
                    <label class="form-label">First Name</label>
                    <input type="text" name="FirstName" class="form-control" placeholder="Enter first name" required />
                </div>

                <!-- Last Name -->
                <div class="col-md-6">
                    <label class="form-label">Last Name</label>
                    <input type="text" name="LastName" class="form-control" placeholder="Enter last name" required />
                </div>

                <!-- Bio -->
                <div class="col-md-12">
                    <label class="form-label">Biography</label>
                    <textarea name="Bio" class="form-control" rows="4" placeholder="Write actor biography..."></textarea>
                </div>

                <!-- News -->
                <div class="col-md-12">
                    <label class="form-label">News</label>
                    <textarea name="News" class="form-control" rows="3" placeholder="Latest news about the actor..."></textarea>
                </div>

                <!-- Profile Picture -->
                <div class="col-md-6">
                    <label class="form-label">Profile Picture</label>
                    <input type="file" name="img" class="form-control" />
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-primary px-4">Create Actor</button>
                <button type="button" class="btn btn-secondary px-4" onclick="window.location.href='/Admin/Actor'">Cancel</button>
            </div>
        </form>
    </div>
</div>