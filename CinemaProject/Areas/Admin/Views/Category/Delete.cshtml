@model CinemaProject.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

<h4>Are you sure you want to delete this category?</h4>

<div>
    <h5>@Model.Name</h5>
</div>

<form asp-area="Admin" asp-controller="Category" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
