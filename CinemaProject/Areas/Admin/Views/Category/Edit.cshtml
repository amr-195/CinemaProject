@model CinemaProject.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="card p-4">
        <h3 class="mb-4 text-center">✏️ Edit Category</h3>

        <form method="post" action="/Admin/Category/Edit">
            @Html.AntiForgeryToken()

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="row g-3">
                <!-- Category Name -->
                <div class="col-md-6">
                    <label class="form-label">Category Name</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Enter category name" required />
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                <button type="button" class="btn btn-secondary px-4" onclick="window.location.href='/Admin/Category'">Cancel</button>
            </div>
        </form>
    </div>
</div>
