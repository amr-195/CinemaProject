@model IEnumerable<CinemaProject.Models.Movie>

@{
    ViewData["Title"] = "Movies";
    var currentPage = Convert.ToInt32(ViewData["CurrentPage"] ?? 1);
    var totalPages = Convert.ToInt32(ViewData["TotalPages"] ?? 1);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Movies</h2>
        <a href="/Admin/Movie/Create" class="btn btn-primary">➕ Create New</a>
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Poster</th>
                <th>Name</th>
                <th>Price</th>
                <th>Cinema</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Id</td>

                        <td>
                            @if (!string.IsNullOrEmpty(movie.ImgUrl))
                            {
                                <img src="~/images/movies/@movie.ImgUrl" alt="@movie.Name"
                                     style="width: 60px; height: 60px; object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No image</span>
                            }
                        </td>

                        <td>@movie.Name</td>
                        <td>@movie.Price.ToString("C")</td>
                        <td>@movie.Cinema?.Name ?? "-"</td>
                        <td>@movie.Category?.Name ?? "-"</td>

                        <td>
                            <a href="/Admin/Movie/Edit/@movie.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/Admin/Movie/Delete/@movie.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this movie?')">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No movies found.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                <a class="page-link" href="/Admin/Movie/Index?currentPage=@(currentPage - 1)">Previous</a>
            </li>
            <li class="page-item active">
                <span class="page-link">@currentPage of @totalPages</span>
            </li>
            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" href="/Admin/Movie/Index?currentPage=@(currentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>
